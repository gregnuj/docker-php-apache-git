#!/bin/sh
set -e

# create project dir
if [ -n "$PROJECT_WORKDIR" ]; then
   mkdir -p "$PROJECT_WORKDIR"
   cd "$PROJECT_WORKDIR"
fi

# add key to user dir
mkdir -p ~/.ssh 
if [ -z "$PROJECT_VCS_HOST" ]; then  
    echo "\n$PROJECT_VCS_HOST" >> ~/.ssh/config
    echo "\n\tStrictHostKeyChecking no"a >> ~/.ssh/config
    echo "\n\tUserKnownHostsFile /dev/null" >> ~/.ssh/config
    [ -z "$PROJECT_VCS_RSA" ] || echo "\n\tIdentityFile $PROJECT_VCS_RSA" >> ~/.ssh/config
fi

# add key to user dir
if [ -n "$PROJECT_VCS_RSA" ]; then
   cp $PROJECT_RSA ~/.ssh/id_rsa
fi

## install project
if [ -n "$PROJECT_VCS" ]; then
    git clone -b $PROJECT_BRANCH $PROJECT_VCS $PROJECT_PATH
fi

exec "$@"
